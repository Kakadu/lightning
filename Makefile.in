
release: 
	$(MAKE) -C src

debug:
	$(MAKE) -C src debug

%.cmo: 
	$(MAKE) -C src $@


INSTALL_OPTS = 
install: release
	$(OCAMLFIND) install lightning META src/lightning.cmxa src/lightning.a src/liblightning.a src/*.cmi src/*.mli src/syntax/pa_prop.cmo src/syntax/pa_debug.cmo $(INSTALL_OPTS) 

uninstall:
	$(OCAMLFIND) remove lightning

reinstall: uninstall install

.PHONY: install uninstall reinstall 

doc:
	$(MAKE) -C src doc

clean: 
	$(MAKE) -C src clean

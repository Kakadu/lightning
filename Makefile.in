lib: 
	$(MAKE) -C src $(LIB)

debug:
	$(MAKE) -C src debug

%.cmo: 
	$(MAKE) -C src $@


INSTALL_OPTS = 

BYTE_FILES = src/lightning.cma src/dlllightning.so src/facebook/fbconnect.cma src/facebook/dllfbconnect.so 
NATIVE_FILES = src/lightning.cmxa src/lightning.a src/liblightning.a src/facebook/fbconnect.cmxa src/facebook/libfbconnect.a src/facebook/fbconnect.a
SYNTAX_FILES = src/syntax/pa_prop.cmo src/syntax/pa_debug.cmo
INSTALL_FILES = 

byte: INSTALL_FILES += BYTE_FILES
native: INSTALL_FILES += NATIVE_FILES
syntax: INSTALL_FILES += SYNTAX_FILES

ifneq (,$(findstring byte,$(LIB)))
	INSTALL_FILES += $(BYTE_FILES)
endif

ifneq (,$(findstring native,$(LIB)))
	INSTALL_FILES += $(NATIVE_FILES)
endif

ifneq (,$(findstring syntax,$(LIB)))
	INSTALL_FILES += $(SYNTAX_FILES)
endif

install: lib 
	cp $(META) META
	sudo $(OCAMLFIND) install lightning META $(INSTALL_FILES) src/*.cmi src/*.mli src/containers/*.cmi src/containers/*.mli src/facebook/*.mli src/facebook/*.cmi $(INSTALL_OPTS) 

uninstall:
	sudo $(OCAMLFIND) remove lightning

reinstall: uninstall install

.PHONY: install uninstall reinstall 

doc:
	$(MAKE) -C src doc

clean: 
	$(MAKE) -C src clean
	$(MAKE) -C src/facebook clean

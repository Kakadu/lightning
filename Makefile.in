
all: 
	$(MAKE) -C src

%.cmo: 
	$(MAKE) -C src $@

install: all
	$(OCAMLFIND) install lightning META src/lightning.cmxa src/lightning.a src/liblightning.a src/*.cmi src/*.mli src/pa_prop.cmo

uninstall:
	$(OCAMLFIND) remove lightning


reinstall: uninstall install

.PHONY: install uninstall reinstall 

doc:
	$(MAKE) -C src doc

clean: 
	$(MAKE) -C src clean
